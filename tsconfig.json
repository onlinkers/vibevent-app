{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // vscode absolute imports
    "baseUrl": "src",
    "paths": {
      "src/*": ["./src/*"]
    },
    // typescript configs
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false, // allow casing filenames to use cases (important for build)
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "noImplicitAny": false, // important to skip downloading/creating ts definitions for external packages
    "jsx": "react"
  },
  "include": [ "src" ],
  "exclude": [ "node_modules", "build" ]
}
